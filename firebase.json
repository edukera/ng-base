{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/ng-base",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/fr/**",
        "destination": "/fr/index.html"
      },
      {
        "source": "/en/**",
        "destination": "/en/index.html"
      }
    ]
  }
}
